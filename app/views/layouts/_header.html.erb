<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".reviewtour"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t(".category") %> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <% list_categories.each do |category| %>
              <li><%= link_to category.name, category %></li>
            <% end %>
          </ul>
        </li>
        <li><%= link_to t(".touristarea"), tourist_areas_url %></li>
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t(".log_out"), logout_path, method: "delete"  %></li>
        <% else %>
          <li><%= link_to t(".log_in"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
